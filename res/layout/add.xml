<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameEdit" android:hint="Название" android:singleLine="true"/>
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/resourceLinkEdit" android:layout_gravity="center_horizontal"
                      android:hint="Адрес ресурса" android:singleLine="true"/>
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/loginEdit" android:hint="Логин" android:singleLine="true"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/passwordEdit" android:hint="Пароль" android:singleLine="true"/>
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:inputType="textMultiLine" android:ems="10" android:id="@+id/descriptionEdit"
                      android:layout_gravity="center_horizontal" android:hint="Описание"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Сохранить"
                    android:id="@+id/saveButton" android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>